// Двумерные массивы
int[,] matrix=new int[5,8]; //5-строкиб 8-столбцы
matrix[0, 1] = 8;
for (int p = 0; p < matrix.GetLength(0); p++)//matrix.GetLength(01) вызывает длину 0-строк, 1-столбцов
{
    for (int k = 0; k < matrix.GetLength(1); k++) Console.Write($"{matrix[p, k]} ");
    Console.WriteLine();
}

// Метод вызывает сам себя(Рекурсия)
void Fill(int row, int col)
{
    if (pic[row, col] == 0)
    {
        Fill(row, col + 1);
    }
}

